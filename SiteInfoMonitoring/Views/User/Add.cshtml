@model SiteInfoMonitoring.Models.User
@{
    ViewBag.Title = "Добавление пользователя";
}

<div class="row">
    <div class="page-header">
        <h2 style="text-align: center">
            @ViewBag.Title
        </h2>
    </div>
    <div class="col-md-12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Login)
                @Html.TextBoxFor(x => x.Login, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Login)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <form method="post">
                <p>
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                </p>
            </form>
            @ViewBag.ResultOfSave
        }
    </div>
</div>



