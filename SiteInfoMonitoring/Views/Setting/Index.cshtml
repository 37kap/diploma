@model SiteInfoMonitoring.Core.Settings.CurrentAppSettings
@{
    ViewBag.Title = "Настройки";
}

<div class="row">
    <div class="page-header">
        <h2>
            @ViewBag.Title
        </h2>
    </div>
    <div class="col-md-12">
        @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(x => x.XmlFile)
            @Html.TextBoxFor(x => x.XmlFile, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.DefaultSiteAddress)
            @Html.TextBoxFor(x => x.DefaultSiteAddress, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.SmtpLogin)
            @Html.TextBoxFor(x => x.SmtpLogin, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.SmtpPassword)
            @Html.TextBoxFor(x => x.SmtpPassword, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.SmtpHost)
            @Html.TextBoxFor(x => x.SmtpHost, new { @class = "form-control" })
        </div>
        <p>
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </p>

        @ViewBag.ResultOfSave
}
    </div>
</div>