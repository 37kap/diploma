@model SiteInfoMonitoring.Models.LoginModels.LoginModel
@{
    ViewBag.Title = "Вход в систему";
}

<h2 style="text-align-last: center; margin-top: 30px; margin-bottom: 20px">Вход в систему</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="text-align-last: center">
    @Html.ValidationSummary(true)
    
    <div class="form-group">
        @Html.LabelFor(model => model.Name, new { @style = "width: 100 %" })
        <div class="col-md-10" style="width: 100%">
            @Html.EditorFor(model => model.Name)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password, new { @style = "width: 100 %" })
        <div class="col-md-10" style="width: 100%">
            @Html.EditorFor(model => model.Password)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-0 col-md-10" style="width: 100%">
            <input type="submit" value="Войти" class="btn btn-primary" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

