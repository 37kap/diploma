@model SiteInfoMonitoring.Models.Division
@{
    ViewBag.Title = "Назначить ответственного на страницу";
}

<div>
    <h3 style="text-align: center">@(ViewBag.Title + " \"" + Model.Description + "\"")</h3>
    <hr>
    <form method="post">
        <div class="form-group">
            @Html.DropDownList("user", (SelectList)ViewBag.Users, "Выберите пользователя", new { @class = "form-control" })
        </div>
        <p>
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </p>
    </form>
</div>